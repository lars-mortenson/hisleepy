{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}